			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{gateway_url}}/authentication/mock",
					"host": [
						"{{gateway_url}}"
					],
					"path": [
						"authentication",
						"mock"
					]
				}
			},
